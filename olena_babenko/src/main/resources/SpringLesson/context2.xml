<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:SpringLesson/conf.properties"/>

    <bean id="phone1" class="SpringLesson.Phone">
        <property name="name" value="${car.model}"/>
        <property name="age" value="15"/>
    </bean>

    <bean id="phone2" class="SpringLesson.Phone">
        <constructor-arg ref="phoneName"/>
        <constructor-arg value="20"/>
    </bean>

    <bean id="phoneName" class="java.lang.String">
        <constructor-arg value="Dsin Dsin"/>
    </bean>

</beans>